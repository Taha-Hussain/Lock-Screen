<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap On Image To Set As Wall Paper"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="10dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/love1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/newlove"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:onClick="SetAsWallPaper_click"
                android:clickable="true"
                />

    <ImageView
        android:id="@+id/love2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/love2"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="SetAsWallPaper_click"
        />

            <ImageView
                android:id="@+id/love3"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/love3"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="SetAsWallPaper_click"
                />

            <ImageView
                android:id="@+id/love4"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/love4"
            android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="SetAsWallPaper_click"
            />

            <ImageView
                android:id="@+id/love5"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/love5"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="SetAsWallPaper_click"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
